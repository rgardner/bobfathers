<% provide(:title, "Edit Idea") %>
<h1>Edit Idea</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@idea, url: idea_verification_path(params[:id])) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>