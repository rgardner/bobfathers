<% provide(:title, "Edit Idea") %>
<h1>Edit Idea</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@idea) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= link_to "Delete Idea", @idea, method: :delete,
                                data: { confirm: "You sure?" },
                                class: "btn btn-large btn-danger" %>
  </div>
</div>